<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:layout_marginBottom="25dp"
    app:cardElevation="0.5dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/itemMenuImage"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_marginStart="@dimen/default_margin_start_end"
            android:layout_marginEnd="@dimen/default_margin_start_end"
            android:src="@drawable/image_pizza_sample"
            android:scaleType="center"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/itemMenuTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Margarita"
            android:layout_marginStart="@dimen/default_margin_item_menu_start_end"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:fontFamily="@font/lato_semibold"
            android:textSize="24sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemMenuDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Сheese, tomatoes, fresh onion leaves"
                android:layout_marginStart="@dimen/default_margin_item_menu_start_end"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="0.3"
                android:textSize="12sp"
                android:fontFamily="@font/lato_regular"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemMenuPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_margin_item_menu_start_end"
                android:layout_weight="0.7"
                android:text="798Р"
                android:gravity="end"
                android:textSize="22sp"
                android:fontFamily="@font/lato_bold"/>


        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>